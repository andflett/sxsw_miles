@media all {

	body { 
		padding: 0;
		min-width: 320px;
	}
   
	.container {
	    max-width: 900px; margin: 0 auto; 
	    display: block;
			position: relative;
			padding: 0 20px 0;
	}
	
	/* =header */
	
		header {
			text-align: center;
			padding: 0;			
			background: url(<%= asset_path "crowd.jpg" %>) no-repeat center center fixed;
			background-size: cover;
			position: relative;
			color: #ffffff;
		}
	
		header:after {
			content: '';
			display: block;
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: rgba(186, 214, 202, 0.3);
		}
	
		header .container {
			position: relative;
			z-index: 1;
		}
	
		header .container h1 {
			font-size: 36px;
			line-height: 56px;
			padding: 20px;
			color: #ffffff;
			background: rgba(255,149,90,0.7);
			display: inline-block;
			margin: 95px auto 110px;
			width: 57%;
		}
		
		header .container h1 strong {
			font-size: 56px;
		}
	
	/* =primary_content */
	
		section#primary_content {
			padding: 0;
		}
		
		section#primary_content .panel {
			padding: 0 0 30px;
		}
		
		section#primary_content .panel:last-child {
			padding-bottom: 0;
		}
				
		section#primary_content h2 {
			text-align: center;
			font-size: 24px;
			color: #ffffff;
			padding: 20px 0;
			background: #F5815A;
			margin-bottom: 35px;
		}
		
		section#primary_content .intro p {
			text-align: center;
			font-size: 22px;
			line-height: 30px;
			width: 80%;
			padding-top: 20px;
			margin: 0 auto 30px;
		}
		
		section#primary_content .intro ul {
			margin: 0;
			padding: 20px 0 25px;
			text-align: center;
		}
		
		section#primary_content .intro ul li {
			font-size: 16px;
			line-height: 22px;
			display: inline-block;
			width: 28%;
			margin-right: 5%;
			font-weight: 100;
		}
		
		section#primary_content .intro ul li:last-child {
			margin: 0;
		}
		
		section#primary_content .intro ul li span {
			font-size: 30px;
			font-weight: bold;
			display: block;
			background: #F5815A;
			color: #ffffff;
			padding: 20px;
			width: 20px;
			border-radius: 50px;
			margin: 0 auto 17px;
			line-height: 19px;
			font-weight: bold;
		}
		
		section#primary_content #stats {
			padding-bottom: 69px;
		}
		
		section#primary_content #stats h2 {
			margin-bottom: 60px;
		}
		
	/* =footer */
	
		footer {
			background: #363D42;
			padding: 40px 0 37px;
			color: #ffffff;
		}
	
		footer p {
			text-align: center;
			font-size: 13px;
			font-weight: 100;
			line-height: 34px;
			margin: 0;
		}
		
			footer p:last-child  {
				padding-top: 10px;
			}
	
		footer p a {
			text-align: left;
		}
	
}
