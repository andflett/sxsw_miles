body { 
	font-family: 'Proxima Nova', Helvetica, Arial, sans-serif; 
	color: #515151;
	-webkit-font-smoothing: antialiased;
}

::selection { background:#133753; color:#ffffff; }
::-moz-selection { background:#133753; color:#ffffff; }
::-webkit-selection { background:#133753; color:#ffffff; }

/* =h1 */

  h1 { 
    font-size: 27px; 
		line-height: 31px;
    font-weight: 100;
		padding-top: 2px;
		margin-bottom: 33px;
  }

/* =h2 */

  h2 { 
		font-size: 22px; 
		line-height: 26px;
		margin-bottom: 25px;
		font-weight: normal;
  }

	aside h2 {
		font-size: 19px;
		margin-bottom: 17px;
	}
	
	aside h2:first-child {
		padding-top: 40px;
	}

/* =h3 */

  h3 { 
    font-size: 16px; 
    margin-bottom: 10px;
		font-weight: normal;
		color: #61514d;
  }

/* =p */

  p { 
    font-size: 15px;
    line-height: 22px; 
    margin-bottom: 25px;
		font-weight: 100;
  }

	p.footnote {
		font-size: 14px;
	}

/* =a */

  a { color: #F5815A; text-decoration: none; }
  a:hover, a:focus, a:active { text-decoration: underline; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-size: 15px; line-height: 20px; padding-bottom: 12px; }

/* =time */

	time { 
		font-size: 14px;
		display: block; 
		color: #61514D;
		margin-bottom: 3px;
		opacity: 0.7;
	}
	
	iframe {
		display: block;
		margin: 2px 0 30px;
	}
	
	strong { 
		font-weight: normal;
	}
	
	figure { 
		padding: 0;
		margin: 0 0 25px;
	}
	
	blockquote p {
		margin-bottom: 10px;
		font-style: italic;
	}
	
	cite {
		margin-bottom: 30px;
		font-size: 13px;
		display: block;
		font-style: normal;
		color: #61514D;
	}
	
	code {
		color: #F5815A;
	}
